{
  "name": "Google Search Me - Mobile App",
  "short_name": "GSM Mobile",
  "description": "Mobile-first location discovery and photo sharing app with advanced camera features",
  "start_url": "/mobile-app.html",
  "display": "standalone",
  "orientation": "portrait-primary",
  "theme_color": "#667eea",
  "background_color": "#f0f2f5",
  "scope": "/",
  "lang": "en-US",
  "dir": "ltr",
  "categories": ["travel", "photography", "utility", "lifestyle"],
  "screenshots": [
    {
      "src": "/images/screenshots/mobile-home.png",
      "sizes": "390x844",
      "type": "image/png",
      "platform": "narrow",
      "label": "Mobile home screen with map and locations"
    },
    {
      "src": "/images/screenshots/mobile-camera.png", 
      "sizes": "390x844",
      "type": "image/png",
      "platform": "narrow",
      "label": "Advanced mobile camera interface"
    },
    {
      "src": "/images/screenshots/tablet-view.png",
      "sizes": "768x1024", 
      "type": "image/png",
      "platform": "wide",
      "label": "Tablet optimized interface"
    }
  ],
  "icons": [
    {
      "src": "/images/icons/icon-16x16.svg",
      "sizes": "16x16",
      "type": "image/svg+xml",
      "purpose": "any"
    },
    {
      "src": "/images/icons/icon-32x32.svg",
      "sizes": "32x32", 
      "type": "image/svg+xml",
      "purpose": "any"
    },
    {
      "src": "/images/icons/icon-144x144.svg",
      "sizes": "144x144",
      "type": "image/svg+xml",
      "purpose": "any"
    },
    {
      "src": "/images/icons/icon-144x144.svg",
      "sizes": "192x192",
      "type": "image/svg+xml",
      "purpose": "any"
    },
    {
      "src": "/images/icons/icon-144x144.svg",
      "sizes": "512x512",
      "type": "image/svg+xml",
      "purpose": "any"
    }
  ],
  "shortcuts": [
    {
      "name": "Open Camera",
      "short_name": "Camera",
      "description": "Quickly open camera to capture location photos",
      "url": "/mobile-app.html?action=camera",
      "icons": [
        {
          "src": "/images/icons/camera-shortcut.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Search Locations",
      "short_name": "Search", 
      "description": "Search for nearby locations and places",
      "url": "/mobile-app.html?action=search",
      "icons": [
        {
          "src": "/images/icons/search-shortcut.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "My Locations",
      "short_name": "Saved",
      "description": "View saved locations and photos",
      "url": "/mobile-app.html?action=saved",
      "icons": [
        {
          "src": "/images/icons/locations-shortcut.png",
          "sizes": "96x96", 
          "type": "image/png"
        }
      ]
    }
  ],
  "related_applications": [
    {
      "platform": "play",
      "url": "https://play.google.com/store/apps/details?id=com.googlesearchme.mobile",
      "id": "com.googlesearchme.mobile"
    },
    {
      "platform": "itunes",
      "url": "https://apps.apple.com/app/google-search-me/id123456789"
    }
  ],
  "prefer_related_applications": false,
  "features": [
    "Cross Platform",
    "Camera API", 
    "Geolocation API",
    "Service Worker",
    "Background Sync",
    "Push Notifications",
    "Offline Support",
    "Photo Upload",
    "Maps Integration"
  ],
  "edge_side_panel": {
    "preferred_width": 400
  },
  "handle_links": "preferred",
  "launch_handler": {
    "client_mode": "auto"
  },
  "file_handlers": [
    {
      "action": "/mobile-app.html?handler=photo",
      "accept": {
        "image/*": [".jpg", ".jpeg", ".png", ".gif", ".webp", ".heic"]
      },
      "icons": [
        {
          "src": "/images/icons/photo-handler.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ],
      "launch_type": "single-client"
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+googlesearchme",
      "url": "/mobile-app.html?protocol=%s"
    }
  ],
  "share_target": {
    "action": "/mobile-app.html?share=true",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text", 
      "url": "url",
      "files": [
        {
          "name": "photos",
          "accept": ["image/*"]
        }
      ]
    }
  },
  "display_override": ["window-controls-overlay", "minimal-ui"],
  "permissions": [
    "camera",
    "geolocation", 
    "storage-access",
    "background-sync"
  ]
}
