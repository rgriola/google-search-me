{
  "name": "google-maps-search-app",
  "version": "2.0.0",
  "description": "A secure, modern Google Maps application with authentication, location saving, and enterprise-grade security features",
  "type": "module",
  "main": "server/app.js",
  "scripts": {
    "start": "node server/app.js",
    "dev": "nodemon server/app.js",
    
    "setup:dev": "node server/setup-env.js development",
    "setup:prod": "node server/setup-env.js production",
    
    "fresh-start": "npm run setup:dev && npm start",
    "clean-dev": "npm run setup:dev && npm run dev",
    "nuclear-option": "npm run setup:dev && npm run dev",
    
    "db:migrate": "bash scripts/migrate-database.sh",
    "db:backup": "cp server/locations.db backups/locations-$(date +%Y%m%d-%H%M%S).db",
    
    "audit": "npm audit",
    "health": "curl -f http://localhost:3000/api/health || echo 'Server not responding'",
    "admin:password": "node scripts/update-user-password.js"
  },
  "keywords": [
    "google-maps",
    "javascript",
    "places-api",
    "search",
    "web-app",
    "node.js",
    "sqlite",
    "express",
    "security",
    "authentication",
    "csrf-protection",
    "xss-protection",
    "enterprise",
    "pwa",
    "responsive"
  ],
  "author": "Rod Griola",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/rgriola/google-maps-search-app.git"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "connect-sqlite3": "^0.9.16",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^17.2.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.17.3",
    "imagekit": "^6.0.0",
    "jsonwebtoken": "^9.0.2",
    "mailtrap": "^4.3.0",
    "multer": "^2.0.2",
    "nodemailer": "^6.9.7",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  }
}
